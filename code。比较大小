#include"stdio.h"
int main(void)
{
	int i,b,n;
	printf("How many numbers do you want to compare?\nplease enter here :");
	scanf("%d",&n);
	float z[n],a;
	printf("Please enter %d numbers.\n",n);
	for(i=0;i<n;i++)
	{
		printf("No.%d=",i+1);
		scanf("%f",&z[i]);
	}
	for(b=0;b<n;b++)
	{
	   for(i=b;i<n;i++)
	   {
		   if(z[b]<z[i]) {a=z[b];z[b]=z[i];z[i]=a;}
	   }
	}
	printf("Now,I will show the 4 numbers from big to litle.\n");
	for(i=0,b=1;i<n;b++,i++)
	   {
	   	printf("%.2f\t",z[i]);
	   	if(b==5) {printf("\n");b=b-4;}
	   }
	return 0;
}
